{
	"name": "invoice-web",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "cross-env PLATFORM=cloudflare react-router dev",
		"dev:cloudflare": "cross-env PLATFORM=cloudflare react-router dev",
		"build": "cross-env PLATFORM=cloudflare react-router build",
		"build:cloudflare": "cross-env PLATFORM=cloudflare react-router build",
		"preview": "bun run build && vite preview",
		"typecheck": "react-router typegen && tsc -b --noEmit",
		"lint": "bunx biome check .",
		"lint:fix": "bunx biome check --write .",
		"deploy": "bun run build:cloudflare && wrangler deploy",
		"deploy:cloudflare": "bun run build:cloudflare && wrangler deploy",
		"deploy:staging": "wrangler deploy --env staging",
		"deploy:production": "wrangler deploy --env production",
		"cf:dev": "wrangler dev",
		"cf:typegen": "wrangler types",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:coverage:check": "vitest run --coverage --coverage.thresholds.100=false"
	},
